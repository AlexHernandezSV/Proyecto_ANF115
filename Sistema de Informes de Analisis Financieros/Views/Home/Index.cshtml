@{
    ViewData["Title"] = "Inicio";
}
<div class="portada row-fluid" style="background-image: url(fondo.jpg);">
    <div class="text-white text-center p-5">
        <h1 class="display-2">Herramientas de Análisis Financiero</h1>
        <p class="lead">Para la toma de decisiones administrativas</p>
    </div>
</div>
<section class="features-icons bg-light text-center">
    <div class="text-center">
        <h2 class="section-heading text-uppercase">Objetivo</h2>
        <h3 class="section-subheading text-muted">
            Proporcionar a los analistas financieros diversos informes financieros como lo son el Análisis Horizontal, Análisis Vertical y
            Razones Financieras; construidos a partir de los catálogos de cuentas, balances
            generales y estados de resultados pertenecientes a una o muchas empresas con la finalidad de apoyar en la toma de
            decisiones administrativas
        </h3>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="fa fa-arrow-down m-auto"></i>
                    </div>
                    <h3>Análisis Vertical</h3>
                    <p class="lead mb-0">Para medir la distribución de la empresa</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="fa fa-arrow-right m-auto"></i>
                    </div>
                    <h3>Análisis Horizontal</h3>
                    <p class="lead mb-0">Para determinar los cambios en el tiempo</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="features-icons-item mx-auto mb-0 mb-lg-3">
                    <div class="features-icons-icon d-flex">
                        <i class="fa fa-line-chart m-auto"></i>
                    </div>
                    <h3>Razones Financieras</h3>
                    <p class="lead mb-0">Para poder evaluar integralmente en distintas áreas en la misma empresa y el mercado</p>
                </div>
            </div>
        </div>
    </div>
</section>


